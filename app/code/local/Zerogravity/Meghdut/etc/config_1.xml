<?xml version="1.0"?>
<config>
    <modules>
        <Zerogravity_Meghdut>
            <version>0.1.0</version>
        </Zerogravity_Meghdut>
    </modules>
    <global>
        <models>
            <meghdut>
                <class>Zerogravity_Meghdut_Model</class>
                <resourceModel>meghdut_mysql4</resourceModel>
            </meghdut>
            <meghdut_mysql4>
                <class>Zerogravity_Meghdut_Model_Mysql4</class>
                <entities>
                    <meghdut>
                        <table>meghdut</table>
                    </meghdut>
                </entities>
            </meghdut_mysql4>            
        </models>    
        <helpers>
            <meghdut>
                <class>Zerogravity_Meghdut_Helper</class>
            </meghdut>
        </helpers>
        <resources>
            <meghdut_setup>
                <setup>
                    <module>Zerogravity_Meghdut</module>
                    <class>Mage_Customer_Model_Entity_Setup</class>
                </setup>
                <connection>
                    <use>core_setup</use>
                </connection>
            </meghdut_setup>
            <zerogravity_meghdut_write>
                <connection>
                    <use>core_write</use>
                </connection>
            </zerogravity_meghdut_write>
            <zerogravity_meghdut_read>
                <connection>
                    <use>core_read</use>
                </connection>
            </zerogravity_meghdut_read>
        </resources>        
    </global>
    
    <frontend>
        <routers>
            <meghdut>
                <use>standard</use>
                <args>
                    <module>Zerogravity_Meghdut</module>
                    <frontName>meghdut</frontName>
                </args>
            </meghdut>
        </routers>
    </frontend>
    <admin>
        <routers>
            <adminhtml>
                <args>
                    <modules>
                        <zgvlmeghdut before="Mage_Adminhtml">Zerogravity_Meghdut_Adminhtml</zgvlmeghdut>
                    </modules>
                </args>
            </adminhtml>
        </routers>
    </admin>
</config>
